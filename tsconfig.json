{
  "compilerOptions": {
    "outDir": "dist/packages",
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl" : "packages",
    "rootDir": "packages",
    "lib": [ "es5", "es2015.core" ],
    "paths": {
      "@simple-dom/*": ["@simple-dom/*/src/index.ts"]
    }
  },
  "files": [
    "packages/@simple-dom/document/src/index.ts",
    "packages/@simple-dom/parser/src/index.ts",
    "packages/@simple-dom/serializer/src/index.ts",
    "packages/@simple-dom/void-map/src/index.ts",
    "packages/simple-dom/src/index.ts"
  ]
}
